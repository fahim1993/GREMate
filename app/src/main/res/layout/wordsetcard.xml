<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wordSetCardView"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#f6f6f6"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="#000"
            android:id="@+id/wordSetName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#000"
            android:id="@+id/wordSetData"
            android:layout_below="@id/wordSetName"/>


    </RelativeLayout>

    <ImageButton
        android:id="@+id/delwordset"
        android:layout_gravity="right"
        android:padding="8dp"
        android:src="@drawable/deltbtn"
        android:scaleType="fitCenter"
        android:backgroundTint="#f1f1f1"
        android:layout_width="40dp"
        android:layout_height="50dp" />

</android.support.v7.widget.CardView>
