<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/wordSetCardView"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@color/cardviewItem"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:src="@drawable/ic_green2"
            android:layout_width="45dp"
            android:layout_height="55dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img"
            android:layout_centerVertical="true"
            android:id="@+id/rl1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textColor="#000"
                android:maxLines="1"
                android:id="@+id/wordSetName"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000"
                android:id="@+id/wordSetData"
                android:layout_below="@id/wordSetName"/>


        </RelativeLayout>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/delwordset"
            android:padding="8dp"
            android:src="@drawable/deltbtn"
            android:scaleType="fitCenter"
            app:backgroundTint="@color/cardviewItem"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_width="45dp"
            android:layout_height="55dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
